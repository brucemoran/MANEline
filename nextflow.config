/*
 * ----------------------------------
 *    MANEline Nextflow config file
 * ----------------------------------
 * Default config options for all environments.
 */

params {
  help = null
  runID = null
  mane_version = "current"
  feature = "txps_exon"
  email = null
  mane_base = "https://ftp.ncbi.nlm.nih.gov/refseq/MANE/MANE_human"
  bedFile = null
  bedAssembly = null
  bedOtherAss = true
  cdsFagz37 = "https://ftp.ensembl.org/pub/grch37/current/fasta/homo_sapiens/cds/Homo_sapiens.GRCh37.cds.all.fa.gz"
  cdsFagz38 = "https://ftp.ensembl.org/pub/current_fasta/homo_sapiens/cds/Homo_sapiens.GRCh38.cds.all.fa.gz"
}

process{
  withName:'Liftover|OtherAss37|OtherAss38'{
    container = 'quay.io/biocontainers/ucsc-liftover:357--h446ed27_4'
  }
}

manifest {
  name = 'brucemoran/MANEline'
  author = 'Bruce Moran'
  homePage = 'https://github.com/brucemoran/MANEline'
  description = 'Nextflow MANEline pipeline'
  mainScript = 'main.nf'
  nextflowVersion = '>=20.0.0'
  version = '0.1'
}
